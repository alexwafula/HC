<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- About Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:textSize="24sp"
            android:textColor="#FF000000"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Description of the app -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harmony Collective\nˈhɑːməni kəˈlɛktɪv\n/ˈhɑːməni kəˈlɛktɪv,/\nnoun"
            android:textColor="#FF000000"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A curated journey through soundscapes, designed to help you discover, connect, and harmonize with music that truly resonates with you."
            android:textColor="#FF000000"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Harmony Collective!\n\nThis app was created to celebrate the beauty of music and how it reflects our unique identities. It's a place where your listening habits are transformed into meaningful insights and tailored recommendations.\n\nDive into your musical world, discover fresh tracks, and curate playlists that speak to your soul.\n\nWe're thrilled to have you join the Harmony Collective community."
            android:textColor="#FF000000"
            android:layout_marginBottom="24dp" />

        <!-- Log Out Button -->
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:layout_marginBottom="16dp"
            style="@style/LargeButtonStyle" />

        <!-- ProgressBar for logout process -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            style="?android:attr/progressBarStyleLarge"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center" />

        <!-- Privacy Policy Text -->
        <TextView
            android:id="@+id/privacy_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:textColor="#FF000000"
            android:layout_marginBottom="16dp"
            android:padding="8dp" />

        <!-- Footer Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="© 2024 Harmony Collective • Version 1.0.0"
            android:textColor="#FF000000" />
    </LinearLayout>
</ScrollView>


