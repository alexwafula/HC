<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".artists.ArtistSelectionActivity"
    android:paddingTop="24dp">

    <!-- Title at the top -->
<TextView
android:id="@+id/selectArtistTitle"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:text="Select Your Favorite Artists (At least 3)"
android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
android:textAlignment="center"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintTop_toTopOf="parent"
android:layout_marginTop="16dp"
android:padding="16dp" />

    <!-- SearchView for searching artists -->
<androidx.appcompat.widget.SearchView
android:id="@+id/searchView"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:queryHint="Search artists"
app:layout_constraintTop_toBottomOf="@id/selectArtistTitle"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
android:layout_marginStart="16dp"
android:layout_marginEnd="16dp"
android:layout_marginTop="8dp" />

    <!-- RecyclerView for listing artists -->
<androidx.recyclerview.widget.RecyclerView
android:id="@+id/artistRecyclerView"
android:layout_width="0dp"
android:layout_height="0dp"
android:layout_margin="16dp"
app:layout_constraintTop_toBottomOf="@id/searchView"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
